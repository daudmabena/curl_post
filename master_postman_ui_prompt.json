{
  "application_name": "post_call",
  "application_type": "desktop_api_client_postman_clone",
  "description": "Open-source Postman alternative with full working UI based on actual Postman screenshots",
  "framework_stack": {
    "frontend": "Next.js with TypeScript",
    "desktop": "Tauri",
    "styling": "Tailwind CSS",
    "components": "Ant Design",
    "state_management": "Zustand",
    "icons": "@ant-design/icons + React Icons"
  },
  "ui_requirements": {
    "goal": "Create full initial UI clone of Postman in single file before splitting into @ui/ components",
    "must_include_dummy_data": true,
    "responsive_design": true,
    "sidebar_collapsible_on_small_screens": true,
    "prepare_for_modularization": true,
    "color_scheme": "Modern workspace with NSSF branding (green + gold)",
    "theme_support": [
      "dark",
      "light"
    ],
    "professional_developer_focused": true
  },
  "complete_application_layout": {
    "window_properties": {
      "title": "post_call - API Development Environment",
      "default_size": {
        "width": "1400px",
        "height": "900px"
      },
      "minimum_size": {
        "width": "1200px",
        "height": "800px"
      },
      "decorations": false,
      "transparent_title_bar": true,
      "resizable": true,
      "maximizable": true,
      "center_on_launch": true
    },
    "main_structure": {
      "type": "full_height_layout",
      "sections": [
        {
          "name": "custom_title_bar",
          "height": "40px",
          "position": "top",
          "z_index": 1000,
          "draggable": true
        },
        {
          "name": "main_application_area",
          "height": "calc(100vh - 40px)",
          "position": "below_title_bar",
          "layout": "three_panel_horizontal"
        }
      ]
    }
  },
  "custom_title_bar": {
    "design": {
      "background": "linear-gradient(135deg, #2D2D2D 0%, #1E1E1E 100%)",
      "border_bottom": "1px solid #404040",
      "height": "40px",
      "padding": "0 12px",
      "display": "flex",
      "align_items": "center",
      "justify_content": "space-between"
    },
    "left_section": {
      "elements": [
        {
          "type": "app_logo",
          "component": "custom_svg_icon",
          "size": "24px",
          "color": "#00D4AA",
          "margin_right": "8px"
        },
        {
          "type": "app_title",
          "text": "post_call",
          "font_size": "14px",
          "font_weight": "600",
          "color": "#FFFFFF",
          "margin_right": "16px"
        },
        {
          "type": "workspace_indicator",
          "component": "badge",
          "text": "Personal Workspace",
          "background": "#00D4AA",
          "color": "#000000",
          "border_radius": "full",
          "padding": "2px 8px",
          "font_size": "11px",
          "font_weight": "500",
          "clickable": true,
          "tooltip": "Switch workspace"
        }
      ]
    },
    "center_section": {
      "elements": [
        {
          "type": "global_search",
          "component": "search_input",
          "width": "300px",
          "height": "28px",
          "placeholder": "Search collections, requests, or documentation...",
          "background": "rgba(255, 255, 255, 0.1)",
          "border": "1px solid rgba(255, 255, 255, 0.2)",
          "border_radius": "14px",
          "padding": "0 12px 0 36px",
          "color": "#FFFFFF",
          "icon": "search",
          "icon_position": "left",
          "keyboard_shortcut": "Ctrl+K"
        }
      ]
    },
    "right_section": {
      "elements": [
        {
          "type": "sync_status",
          "component": "icon_button",
          "icon": "cloud-sync",
          "size": "16px",
          "color": "#00D4AA",
          "tooltip": "Sync status: Connected",
          "animation": "rotate_on_sync",
          "margin_right": "8px"
        },
        {
          "type": "notifications",
          "component": "icon_button_with_badge",
          "icon": "bell",
          "size": "16px",
          "color": "#B0B0B0",
          "badge_count": 3,
          "badge_color": "#FF6B6B",
          "tooltip": "3 new notifications",
          "margin_right": "8px"
        },
        {
          "type": "user_avatar",
          "component": "avatar",
          "size": "28px",
          "src": "user_profile_image",
          "fallback": "U",
          "border": "2px solid #404040",
          "margin_right": "12px",
          "clickable": true,
          "dropdown_menu": true
        },
        {
          "type": "window_controls",
          "component": "custom_window_controls",
          "buttons": [
            {
              "type": "minimize",
              "icon": "minus",
              "color": "#FFB800",
              "hover_background": "rgba(255, 184, 0, 0.2)"
            },
            {
              "type": "maximize",
              "icon": "square",
              "color": "#00CA4E",
              "hover_background": "rgba(0, 202, 78, 0.2)"
            },
            {
              "type": "close",
              "icon": "x",
              "color": "#FF5F56",
              "hover_background": "rgba(255, 95, 86, 0.2)"
            }
          ]
        }
      ]
    }
  },
  "topbar_section": {
    "height": "48px",
    "background": "#2D2D2D",
    "border_bottom": "1px solid #404040",
    "padding": "8px 16px",
    "layout": "horizontal_sections",
    "sections": {
      "left_section": {
        "elements": [
          {
            "type": "workspace_switcher",
            "component": "dropdown_button",
            "text": "Team Workspace",
            "icon": "chevron-down",
            "width": "180px",
            "background": "rgba(255, 255, 255, 0.05)",
            "border": "1px solid rgba(255, 255, 255, 0.1)",
            "border_radius": "6px"
          },
          {
            "type": "global_search",
            "component": "search_input",
            "placeholder": "Search APIs/collections",
            "width": "250px",
            "margin_left": "12px",
            "icon": "search"
          },
          {
            "type": "action_buttons",
            "margin_left": "12px",
            "buttons": [
              {
                "text": "New",
                "icon": "plus",
                "style": "primary",
                "background": "#00D4AA"
              },
              {
                "text": "Import",
                "icon": "upload",
                "style": "secondary",
                "margin_left": "8px"
              }
            ]
          }
        ]
      },
      "center_section": {
        "elements": [
          {
            "type": "request_tabs",
            "component": "horizontal_tabs",
            "tabs": [
              {
                "id": "tab_1",
                "method": "GET",
                "method_color": "#4CAF50",
                "name": "Get Users",
                "active": true,
                "closable": true,
                "unsaved": false
              },
              {
                "id": "tab_2",
                "method": "POST",
                "method_color": "#FF9800",
                "name": "Create User",
                "active": false,
                "closable": true,
                "unsaved": true
              },
              {
                "id": "tab_3",
                "method": "PUT",
                "method_color": "#2196F3",
                "name": "Update Profile",
                "active": false,
                "closable": true,
                "unsaved": false
              }
            ],
            "add_tab_button": {
              "icon": "plus",
              "tooltip": "New Tab"
            }
          }
        ]
      },
      "right_section": {
        "elements": [
          {
            "type": "utility_buttons",
            "buttons": [
              {
                "icon": "play",
                "tooltip": "Runner",
                "color": "#B0B0B0"
              },
              {
                "icon": "shield",
                "tooltip": "Proxy",
                "color": "#B0B0B0"
              },
              {
                "icon": "cookie",
                "tooltip": "Cookies",
                "color": "#B0B0B0"
              },
              {
                "icon": "key",
                "tooltip": "Vault",
                "color": "#B0B0B0"
              },
              {
                "icon": "trash",
                "tooltip": "Trash",
                "color": "#B0B0B0"
              }
            ]
          },
          {
            "type": "settings_menu",
            "component": "dropdown_menu",
            "trigger": {
              "icon": "settings",
              "tooltip": "Settings"
            },
            "margin_left": "12px"
          },
          {
            "type": "profile_menu",
            "component": "avatar_dropdown",
            "avatar_size": "32px",
            "margin_left": "8px"
          }
        ]
      }
    }
  },
  "main_application_area": {
    "layout": "three_panel_horizontal",
    "panels": {
      "left_sidebar": {
        "name": "navigation_sidebar",
        "width": "280px",
        "min_width": "200px",
        "max_width": "400px",
        "resizable": true,
        "collapsible": true,
        "background": "#2D2D2D",
        "border_right": "1px solid #404040"
      },
      "main_content": {
        "name": "workspace_area",
        "flex_grow": 1,
        "min_width": "500px",
        "background": "#1E1E1E",
        "layout": "vertical_split",
        "split_ratio": "60:40"
      },
      "right_sidebar": {
        "name": "contextual_sidebar",
        "width": "320px",
        "min_width": "250px",
        "max_width": "500px",
        "resizable": true,
        "collapsible": true,
        "default_collapsed": true,
        "background": "#2D2D2D",
        "border_left": "1px solid #404040"
      }
    }
  },
  "left_sidebar_navigation": {
    "structure": {
      "header": {
        "height": "60px",
        "background": "linear-gradient(180deg, #2D2D2D 0%, #252525 100%)",
        "border_bottom": "1px solid #404040",
        "padding": "12px",
        "content": {
          "workspace_selector": {
            "component": "dropdown_button",
            "width": "100%",
            "height": "36px",
            "background": "rgba(255, 255, 255, 0.05)",
            "border": "1px solid rgba(255, 255, 255, 0.1)",
            "border_radius": "6px",
            "padding": "8px 12px",
            "text": "Personal Workspace",
            "icon": "chevron-down",
            "color": "#FFFFFF"
          }
        }
      },
      "navigation_tabs": {
        "type": "vertical_tabs",
        "padding": "8px",
        "tabs": [
          {
            "id": "collections",
            "name": "Collections",
            "icon": "folder-open",
            "active": true,
            "badge": 12,
            "color": "#00D4AA",
            "description": "Collapsible tree view of collections (folders â†’ requests)"
          },
          {
            "id": "environments",
            "name": "Environments",
            "icon": "globe",
            "badge": 3,
            "color": "#00D4AA",
            "description": "Environment variables and configurations"
          },
          {
            "id": "flows",
            "name": "Flows",
            "icon": "git-branch",
            "color": "#00D4AA",
            "description": "Visual API workflow builder"
          },
          {
            "id": "history",
            "name": "History",
            "icon": "clock",
            "badge": 25,
            "color": "#00D4AA",
            "description": "Request history and previous calls"
          }
        ],
        "tab_style": {
          "height": "44px",
          "margin": "2px 0",
          "border_radius": "6px",
          "padding": "0 12px",
          "display": "flex",
          "align_items": "center",
          "hover_background": "rgba(255, 255, 255, 0.05)",
          "active_background": "rgba(0, 212, 170, 0.1)",
          "active_border_left": "3px solid #00D4AA"
        }
      },
      "content_area": {
        "flex_grow": 1,
        "padding": "0",
        "overflow": "hidden"
      },
      "footer": {
        "height": "50px",
        "background": "#252525",
        "border_top": "1px solid #404040",
        "padding": "8px 12px",
        "content": {
          "quick_actions": {
            "layout": "grid",
            "columns": 4,
            "gap": "4px",
            "buttons": [
              {
                "icon": "plus-circle",
                "tooltip": "New Request (Ctrl+N)",
                "color": "#00D4AA",
                "size": "20px"
              },
              {
                "icon": "folder-plus",
                "tooltip": "New Collection (Ctrl+Shift+N)",
                "color": "#00D4AA",
                "size": "20px"
              },
              {
                "icon": "upload",
                "tooltip": "Import",
                "color": "#FF6B6B",
                "size": "20px"
              },
              {
                "icon": "settings",
                "tooltip": "Settings",
                "color": "#B0B0B0",
                "size": "20px"
              }
            ]
          }
        }
      }
    }
  },
  "collections_tree_view": {
    "when_active": "collections_tab_selected",
    "structure": {
      "search_bar": {
        "height": "40px",
        "padding": "8px 12px",
        "background": "#2D2D2D",
        "border_bottom": "1px solid #404040",
        "input": {
          "placeholder": "Filter collections...",
          "background": "rgba(255, 255, 255, 0.05)",
          "border": "1px solid rgba(255, 255, 255, 0.1)",
          "border_radius": "4px",
          "padding": "6px 12px",
          "color": "#FFFFFF",
          "icon": "search"
        }
      },
      "tree_container": {
        "flex_grow": 1,
        "padding": "8px 0",
        "overflow_y": "auto",
        "custom_scrollbar": true
      },
      "tree_nodes": {
        "collection": {
          "height": "32px",
          "padding": "0 12px 0 16px",
          "display": "flex",
          "align_items": "center",
          "hover_background": "rgba(0, 212, 170, 0.1)",
          "selected_background": "rgba(0, 212, 170, 0.2)",
          "icon": {
            "type": "folder",
            "size": "16px",
            "color": "#00D4AA",
            "margin_right": "8px"
          },
          "label": {
            "font_weight": "600",
            "color": "#FFFFFF",
            "flex_grow": 1
          },
          "actions": {
            "visible_on_hover": true,
            "buttons": [
              "more-horizontal"
            ]
          }
        },
        "folder": {
          "height": "32px",
          "padding": "0 12px 0 32px",
          "display": "flex",
          "align_items": "center",
          "hover_background": "rgba(255, 184, 0, 0.1)",
          "selected_background": "rgba(255, 184, 0, 0.2)",
          "icon": {
            "type": "folder",
            "size": "16px",
            "color": "#FFB800",
            "margin_right": "8px"
          },
          "label": {
            "font_weight": "500",
            "color": "#E0E0E0",
            "flex_grow": 1
          }
        },
        "request": {
          "height": "32px",
          "padding": "0 12px 0 48px",
          "display": "flex",
          "align_items": "center",
          "hover_background": "rgba(255, 255, 255, 0.05)",
          "selected_background": "rgba(255, 255, 255, 0.1)",
          "method_badge": {
            "width": "40px",
            "height": "20px",
            "border_radius": "4px",
            "font_size": "10px",
            "font_weight": "600",
            "text_align": "center",
            "margin_right": "8px",
            "colors": {
              "GET": "#4CAF50",
              "POST": "#FF9800",
              "PUT": "#2196F3",
              "DELETE": "#F44336",
              "PATCH": "#9C27B0"
            }
          },
          "label": {
            "font_weight": "400",
            "color": "#B0B0B0",
            "flex_grow": 1
          },
          "status_indicator": {
            "size": "8px",
            "margin_left": "8px",
            "colors": {
              "saved": "#4CAF50",
              "modified": "#FF9800",
              "error": "#F44336"
            }
          }
        }
      }
    }
  },
  "main_workspace_area": {
    "layout": "vertical_split",
    "top_section": {
      "name": "request_builder",
      "height": "60%",
      "min_height": "300px",
      "background": "#1E1E1E"
    },
    "bottom_section": {
      "name": "response_viewer",
      "height": "40%",
      "min_height": "200px",
      "background": "#1E1E1E",
      "border_top": "1px solid #404040"
    },
    "resize_handle": {
      "height": "4px",
      "background": "transparent",
      "hover_background": "#00D4AA",
      "cursor": "row-resize"
    }
  },
  "request_builder_section": {
    "structure": {
      "header": {
        "height": "60px",
        "background": "linear-gradient(135deg, #2D2D2D 0%, #252525 100%)",
        "border_bottom": "1px solid #404040",
        "padding": "12px 20px",
        "content": {
          "request_name": {
            "component": "editable_title",
            "text": "Untitled Request",
            "font_size": "18px",
            "font_weight": "600",
            "color": "#FFFFFF",
            "editable": true,
            "placeholder": "Enter request name..."
          },
          "request_description": {
            "component": "expandable_textarea",
            "text": "",
            "font_size": "14px",
            "color": "#B0B0B0",
            "placeholder": "Add a description...",
            "margin_top": "4px",
            "expandable": true
          }
        }
      },
      "url_section": {
        "height": "80px",
        "background": "#1E1E1E",
        "border_bottom": "1px solid #404040",
        "padding": "16px 20px",
        "description": "Request line: method dropdown + URL input + environment selector",
        "content": {
          "method_selector": {
            "component": "select_dropdown",
            "width": "120px",
            "height": "48px",
            "background": "#2D2D2D",
            "border": "1px solid #404040",
            "border_radius": "8px",
            "options": [
              {
                "value": "GET",
                "color": "#4CAF50"
              },
              {
                "value": "POST",
                "color": "#FF9800"
              },
              {
                "value": "PUT",
                "color": "#2196F3"
              },
              {
                "value": "DELETE",
                "color": "#F44336"
              },
              {
                "value": "PATCH",
                "color": "#9C27B0"
              },
              {
                "value": "HEAD",
                "color": "#607D8B"
              },
              {
                "value": "OPTIONS",
                "color": "#795548"
              }
            ],
            "default": "GET"
          },
          "url_input": {
            "component": "smart_input",
            "flex_grow": 1,
            "height": "48px",
            "margin_left": "12px",
            "background": "#2D2D2D",
            "border": "1px solid #404040",
            "border_radius": "8px",
            "padding": "0 16px",
            "placeholder": "Enter request URL or paste cURL command",
            "color": "#FFFFFF",
            "features": {
              "autocomplete": true,
              "variable_substitution": true,
              "curl_import": true,
              "validation": true
            }
          },
          "environment_selector": {
            "component": "select_dropdown",
            "width": "150px",
            "height": "48px",
            "margin_left": "12px",
            "background": "#2D2D2D",
            "border": "1px solid #404040",
            "border_radius": "8px",
            "placeholder": "No Environment",
            "options": [
              {
                "value": "development",
                "text": "Development"
              },
              {
                "value": "staging",
                "text": "Staging"
              },
              {
                "value": "production",
                "text": "Production"
              }
            ]
          },
          "send_button": {
            "component": "primary_button",
            "width": "100px",
            "height": "48px",
            "margin_left": "12px",
            "background": "linear-gradient(135deg, #00D4AA 0%, #00B894 100%)",
            "border_radius": "8px",
            "color": "#FFFFFF",
            "font_weight": "600",
            "text": "Send",
            "keyboard_shortcut": "Ctrl+Enter",
            "hover_effects": {
              "scale": "1.02",
              "glow": "0 0 20px rgba(0, 212, 170, 0.3)"
            }
          },
          "save_share_options": {
            "component": "button_group",
            "margin_left": "8px",
            "buttons": [
              {
                "icon": "save",
                "tooltip": "Save",
                "style": "ghost"
              },
              {
                "icon": "share",
                "tooltip": "Share",
                "style": "ghost"
              }
            ]
          }
        }
      },
      "tabs_section": {
        "tab_bar": {
          "height": "48px",
          "background": "#252525",
          "border_bottom": "1px solid #404040",
          "padding": "0 20px",
          "tabs": [
            {
              "id": "params",
              "label": "Params",
              "icon": "list",
              "active": true,
              "badge": 3
            },
            {
              "id": "authorization",
              "label": "Authorization",
              "icon": "shield",
              "indicator": true
            },
            {
              "id": "headers",
              "label": "Headers",
              "icon": "layers",
              "badge": 5
            },
            {
              "id": "body",
              "label": "Body",
              "icon": "file-text",
              "indicator": true
            },
            {
              "id": "pre_request",
              "label": "Pre-request Script",
              "icon": "code",
              "status": "success"
            },
            {
              "id": "tests",
              "label": "Tests",
              "icon": "check-circle",
              "status": "warning"
            },
            {
              "id": "settings",
              "label": "Settings",
              "icon": "settings",
              "position": "right"
            }
          ]
        },
        "content_area": {
          "flex_grow": 1,
          "padding": "20px",
          "background": "#1E1E1E"
        }
      }
    }
  },
  "request_tabs_content": {
    "params_tab": {
      "when_active": "params_tab_selected",
      "content": {
        "query_params": {
          "title": "Query Parameters",
          "component": "key_value_editor",
          "add_button": "Add Parameter",
          "bulk_edit": true,
          "columns": [
            {
              "name": "key",
              "width": "40%",
              "placeholder": "Parameter name"
            },
            {
              "name": "value",
              "width": "40%",
              "placeholder": "Parameter value"
            },
            {
              "name": "description",
              "width": "15%",
              "placeholder": "Description"
            },
            {
              "name": "actions",
              "width": "5%"
            }
          ]
        },
        "path_variables": {
          "title": "Path Variables",
          "component": "key_value_editor",
          "auto_detected": true,
          "read_only_keys": true
        }
      }
    },
    "authorization_tab": {
      "when_active": "authorization_tab_selected",
      "content": {
        "auth_type_selector": {
          "component": "radio_group",
          "options": [
            "No Auth",
            "API Key",
            "Bearer Token",
            "Basic Auth",
            "OAuth 1.0",
            "OAuth 2.0",
            "AWS Signature",
            "NTLM Authentication"
          ],
          "default": "No Auth"
        },
        "auth_config_area": {
          "component": "dynamic_form",
          "changes_based_on": "selected_auth_type"
        }
      }
    },
    "headers_tab": {
      "when_active": "headers_tab_selected",
      "content": {
        "headers_editor": {
